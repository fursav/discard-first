/* sections */

.section
    margin-bottom .2em
    padding 1rem 0
    box-shadow 0 .3em .3em -.3em black

@media (min-width: medium-screen)
  .section
    padding 4rem 0

.section-white    
  background-image linear-gradient(to bottom, #F5F3EB 0%, #FFFFFF 0%)

.section-gray 
  background-image linear-gradient(to bottom, #F5F3EB 0%, #E8E8E8 100%)

.selected
  background-color darken(buttonblue-hover,29%) !important
  box-shadow inset 0 0 1rem darken(buttonblue,70%)

//icons
.icon-large
    font-size -font-size(2)

.icon-xlarge
    font-size -font-size(3)

.icon-huge
    font-size -font-size(10)

@media (max-width: medium-screen)
  .icon-huge
    display none

.icon-inline
    vertical-align bottom
    
.stuck 
  position fixed !important
  top 0px
  box-shadow 0px 2px 4px rgba(0, 0, 0, 0.3)

.clickable
  cursor pointer

@media (max-width: small-screen)
  .hidden-small
    display none
    
